<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Shoppapp.title">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Shoppapp.text">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/_56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Theme.Shoppapp.Icon.Circle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/_56dp</item>
        <item name="android:layout_height">@dimen/_56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/_14dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:fontFamily">@font/_montserrat_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="commonText18" parent="Theme.Shoppapp.text">
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corner_start</item>
    </style>

</resources>